{
    "name": "nizam/php-sdk",
    "description": "PHP SDK for the NIZAM Open Communications Control Platform API",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nizam\\Sdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nizam\\Sdk\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable"
}
