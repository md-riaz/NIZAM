APP_NAME=NIZAM
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=nizam
DB_USERNAME=nizam
DB_PASSWORD=secret

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
# REDIS_PASSWORD must be set in production. An empty password disables Redis authentication.
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# FreeSWITCH ESL connection
FREESWITCH_HOST=127.0.0.1
FREESWITCH_ESL_PORT=8021
FREESWITCH_ESL_PASSWORD=ClueCon

# FreeSWITCH XML-cURL URL (used by FreeSWITCH to fetch dialplan/directory from NIZAM)
FREESWITCH_XML_CURL_URL=http://localhost/freeswitch/xml-curl

# Media / NAT settings — set EXT_RTP_IP and EXT_SIP_IP to the public IP of your
# FreeSWITCH host when deploying behind NAT. Use 'auto-nat' for automatic detection.
EXT_RTP_IP=auto-nat
EXT_SIP_IP=auto-nat
RTP_PORT_RANGE_START=16384
RTP_PORT_RANGE_END=32768
DTMF_TYPE=rfc2833
# SRTP_POLICY options: optional | mandatory | disabled
SRTP_POLICY=optional

# Sanctum — comma-separated list of domains that can make stateful requests
# (e.g. dashboard domain). Required for SPA / cookie-based auth.
SANCTUM_STATEFUL_DOMAINS=localhost
